unit uCadastroClienteFornecedor;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TfrmClienteFornecedor = class(TForm)
    Label1: TLabel;
    edtNome: TEdit;
    Label2: TLabel;
    Edit1: TEdit;
    rdbFisica: TRadioButton;
    rdbJuridica: TRadioButton;
    chkCliente: TCheckBox;
    chkFornecedor: TCheckBox;
    Label3: TLabel;
    Edit2: TEdit;
    Button1: TButton;
    lblCPF: TLabel;
    edtCPF: TEdit;
    Label5: TLabel;
    lblCNPJ: TLabel;
    edtCNPJ: TEdit;
    procedure rdbJuridicaClick(Sender: TObject);
    procedure rdbFisicaClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmClienteFornecedor: TfrmClienteFornecedor;

implementation

{$R *.dfm}

procedure TfrmClienteFornecedor.rdbFisicaClick(Sender: TObject);
begin
  lblCPF.Show;
  edtCPF.Show;

  lblCNPJ.Hide;
  edtCNPJ.Hide;
end;

procedure TfrmCadastfrmClienteFornecedoricaClick(Sender: TObject);
begin
  lblCPF.Hide;
  edtCPF.Hide;

  lblCNPJ.Show;
  edtCNPJ.Show;
end;

end.
